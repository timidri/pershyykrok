---
import BaseLayout from '../layouts/BaseLayout.astro';

const path = new URL(Astro.request.url).pathname || '';
const locale = path.startsWith('/ru') ? 'ru' : 'ua';
const t = {
  ua: {
    title: 'Сторінку не знайдено',
    body: 'Схоже, цієї сторінки немає. Можливо, вона ще не перекладена українською.',
    cta: 'Повернутися на головну',
  },
  ru: {
    title: 'Страница не найдена',
    body: 'Похоже, этой страницы нет. Возможно, она еще не переведена на русский.',
    cta: 'Вернуться на главную',
  },
}[locale];
---

<BaseLayout title={t.title} locale={locale} currentPath={`/${locale}/404`}>
  <section class="max-w-3xl mx-auto px-8 py-20 text-center space-y-6">
    <h1 class="text-h2">{t.title}</h1>
    <p class="text-body text-gray-700">{t.body}</p>
    <a
      href={`/${locale}/`}
      class="inline-block px-5 py-2 text-white rounded hover:opacity-90 transition-opacity"
      style="background-color: #1371AF;"
    >
      {t.cta}
    </a>
  </section>
</BaseLayout>
