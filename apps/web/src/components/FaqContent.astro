---
import PortableText from './PortableText.astro';
import type { BlockContent } from '../sanity-types';

interface FaqItem {
  question?: string;
  answer?: BlockContent | null;
}

interface Props {
  intro?: BlockContent | null;
  items?: FaqItem[] | null;
}

const { intro, items } = Astro.props;
---

<div class="max-w-3xl mx-auto px-8 py-16 space-y-10">
  {intro && <PortableText value={intro} />}

  {items && items.length > 0 && (
    <div class="space-y-8">
      {items.map((item) => (
        <div class="space-y-2">
          {item.question && <h3 class="text-lg font-semibold">{item.question}</h3>}
          {item.answer && <PortableText value={item.answer} />}
        </div>
      ))}
    </div>
  )}
</div>
