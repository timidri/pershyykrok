---
import { urlForImage } from '../lib/sanity';
import type { SiteSettingsQueryResult } from '../sanity-types';

interface Props {
  siteSettings: SiteSettingsQueryResult;
  locale: 'ru' | 'ua';
  currentPath: string;
}

const { siteSettings, locale, currentPath } = Astro.props;

const menu = locale === 'ua' ? siteSettings?.mainMenuUa : siteSettings?.mainMenuRu;
const otherLocale: 'ru' | 'ua' = locale === 'ua' ? 'ru' : 'ua';
const otherPath = currentPath.replace(`/${locale}`, `/${otherLocale}`) || `/${otherLocale}`;

function hrefForLink(link: { _type: string; slug: string | null } | null, locale: string): string {
  if (!link) return '#';
  if (link._type === 'homePage') return `/${locale}/`;
  if (link._type === 'page' && link.slug) return `/${locale}/${link.slug}`;
  return '#';
}
---

<header className="border-b border-gray-200">
  <div className="max-w-5xl mx-auto px-8 py-4 flex items-center justify-between gap-6">
    <a href={`/${locale}/`} className="shrink-0 block [contain:layout_paint]" aria-label="Home">
      {siteSettings?.logo ? (
        <img
          src={urlForImage(siteSettings.logo).width(140).height(140).url()}
          srcSet={`${urlForImage(siteSettings.logo).width(80).height(80).url()} 80w, ${urlForImage(siteSettings.logo).width(140).height(140).url()} 140w, ${urlForImage(siteSettings.logo).width(280).height(280).url()} 280w`}
          sizes="80px (max-width: 767px), 140px"
          alt=""
          width="140"
          height="140"
          className="logo-img h-[80px] w-[80px] md:h-[140px] md:w-[140px] object-contain"
          loading="eager"
          decoding="async"
        />
      ) : (
        <span className="font-heading text-h3">Logo</span>
      )}
    </a>

    {menu && menu.length > 0 && (
      <nav className="flex items-center gap-6" aria-label="Main">
        {menu.map((item) => (
          <a
            href={hrefForLink(item.link, locale)}
            className="text-body text-gray-700 hover:text-gray-900 underline-offset-2 hover:underline"
          >
            {item.label ?? ''}
          </a>
        ))}
      </nav>
    )}

    <div className="flex items-center gap-4 shrink-0">
      <a
        href={locale === 'ua' ? currentPath : otherPath}
        className={`text-body ${locale === 'ua' ? 'font-semibold underline' : 'text-gray-600 hover:text-gray-900'}`}
        hrefLang="uk"
      >
        Українська
      </a>
      <a
        href={locale === 'ru' ? currentPath : otherPath}
        className={`text-body ${locale === 'ru' ? 'font-semibold underline' : 'text-gray-600 hover:text-gray-900'}`}
        hrefLang="ru"
      >
        Русский
      </a>
    </div>
  </div>
</header>
